<!--components/picker2/picker2.wxml-->
<view class="pickerContainer {{isOpen ? 'showPicker' : ''}}">
  <view class='picker'>
    <view class='picker-hd'>
      <view class="cancelType" bindtap="cancelBtn">
        <text>取消</text>
      </view>
      <text>{{titleText}}</text>
      <view class='sureType' bindtap='sureBtn'>
        <text>确定</text>
      </view>
    </view>
    
    <view class='picker-bd'>
      <jfr-picker-view
        schoolColumn="{{schoolColumn}}"
        gradeColumn="{{gradeColumn}}"
        classColumn="{{classColumn}}"
        defaultPickerData="{{defaultPickerData}}"
        columns="{{columns}}"
        indicator-style="background-color: #ddd;z-index:0">
      </jfr-picker-view>
    </view>
  </view>
</view>